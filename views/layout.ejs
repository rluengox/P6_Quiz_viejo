<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Quiz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet'
          type='text/css'
          media='only screen and (min-width: 800px) and (min-device-width: 600px)'
          href='/stylesheets/wide.css'/>
    <link rel='stylesheet' type='text/css' media='only screen and (max-width: 480px)' href='/stylesheets/smartphone.css'/>
</head>
<body>
<div id="page">
    <header class="main" id="mainHeader">
        <h1><span class="no-narrow">Pagina</span> Quiz <span class="no-narrow">Core</span></h1>
    </header>

    <nav class="main" id="mainNav" role="navigation">
        <a href="/">Inicio</a>
        <a href="/quizzes">Quiz</a>
        <a href="/author">Creditos</a>
        <a href="/quizzes/randomplay">Play</a>
    </nav>

    <section class="main" id="mainSection">

        <% if (messages.info) { %>
        <article id='flashinfo'>
            <h3>Información de interés :</h3>
            <ul>
                <% for (var i in messages.info) { %>
                <li> <%= messages.info[i] %> </li>
                <% } %>
            </ul>
        </article>
        <% } %>

        <% if (messages.success) { %>
        <article id='flashsuccess'>
            <h3>Tareas completadas correctamente:</h3>
            <ul>
                <% for (var i in messages.success) { %>
                <li> <%= messages.success[i] %> </li>
                <% } %>
            </ul>
        </article>
        <% } %>

        <% if (messages.error) { %>
        <article id='flasherror'>
            <h3>Errores:</h3>
            <ul>
                <% for (var i in messages.error) { %>
                <li> <%= messages.error[i] %> </li>
                <% } %>
            </ul>
        </article>
        <% } %>

        <%- body %>
    </section>

    <footer class="main" id="mainFooter" >
        <a title="¿Qué es un Quiz?" href="https://en.wikipedia.org/wiki/Quiz">Quiz creado por Jose Ignacio Villegas Villegas y Raúl Luengo Ximenez-Cruz</a>
    </footer>
</div>
</body>
</html>
